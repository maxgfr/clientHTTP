<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.web.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainViewController">
    
   <top>
      <JFXTextField fx:id="URL" BorderPane.alignment="CENTER" />
   </top>
   
   <center>
      <SplitPane dividerPositions="0.5" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
        <items>
           
            <AnchorPane>
                <children>
                    <WebView fx:id="webView"  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            
            <AnchorPane>
                <children>
                    <JFXTextArea fx:id="content" wrapText="true" BorderPane.alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>
            
        </items>
      </SplitPane>
   </center>
   
   <bottom>
      <AnchorPane>
            <children>
                <JFXButton fx:id="search" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSearch" prefWidth="400.0" text="Search" textAlignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
        </AnchorPane>
   </bottom>
   
</BorderPane>
